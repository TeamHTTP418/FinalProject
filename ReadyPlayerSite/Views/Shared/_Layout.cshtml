<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Ready Player One ~ Hale Library</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">Ready Player One ~ Hale Librabry</p>
            </div>
            <div class="top_menu">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav class="top_menu">
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Leader Board", "LeaderBoard")</li>
                        <li>@Html.ActionLink("View Tasks", "Index", "Tasks")</li>
                        @if (User.IsInRole("Administrator"))
                        { 
                            <li>@Html.ActionLink("User Profiles", "Index", "Users")</li>
                            <li>@Html.ActionLink("Administration", "Index", "Admin")</li>
                        }else{
                            <li>@Html.ActionLink("Your Profile", "Details", "Users", new { id = WebSecurity.CurrentUserId}, null)</li>   
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer">
        Peter Machutta and Brian Dye's Final Project
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>
